<div class="page-header">
  <h3><%= @character.name %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @character.name %></dd>
      <dt>Movie</dt>
      <dd><a href="/movies/<%=@character.movie_id%>">
        <%= @character.movie.title %></a>
      </dd>
      <dt>Cover</dt>
      <dd><img src="<%=Movie.find_by( :id => @character.movie_id).image_url%>"></dd>
      <dt>Actor</dt>
      <dd><%= Actor.find_by( :id => @character.actor_id).name %></dd>
      <dt>Picture</dt>
      <dd><img src="<%=Actor.find_by( :id => @character.actor_id).image_url%>"></dd>


    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/characters" class="btn btn-primary">
        Back
      </a>
      <a href="/characters/<%= @character.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_character/<%= @character.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
